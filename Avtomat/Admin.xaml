<Window x:Class="Avtomat.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avtomat"
        mc:Ignorable="d"
        Title="Admin" Height="450" Width="800">
    <Grid>
        <Button Content="|||" Background="{x:Null}" BorderBrush="{x:Null}" Width="20" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click"/>
        <StackPanel>
            <StackPanel x:Name="Menu" HorizontalAlignment="Center" VerticalAlignment="Top">
                <TextBlock Text="Административная панель"/>
                <Button Content="Монеты" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click_1" Margin="0,5,0,0"/>
                <Button Content="Напитки" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,5,0,0" Click="Button_Click_2"/>
                <Button Content="Отчёт" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,5,0,0"/>
            </StackPanel>
            <Frame x:Name="MyFrame" VerticalAlignment="Center" NavigationUIVisibility="Hidden" Margin="0,20,0,0"/>
        </StackPanel>
        <Button Content="Назад" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="Button_Click_3"/>
    </Grid>
</Window>
