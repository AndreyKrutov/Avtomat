<Page x:Class="Avtomat.AddDrinks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Avtomat"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddDrinks">

    <Grid>
        <Button Content="X" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Click="Button_Click"/>
        <StackPanel HorizontalAlignment="Center">
            <TextBox Text="___" FontWeight="Bold" Margin="0,0,0,20" HorizontalContentAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}"/>
            <Image/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Выберите файл"/>
                <TextBlock Text="Файл не выбран" Margin="10,0,0,0"/>
            </StackPanel>
            <TextBlock Text="Цена" Margin="0,20,0,0"/>
            <TextBox/>
            <TextBlock Text="Колличество"/>
            <TextBox/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Сохранить"/>
                <Button Content="Удалить" Margin="20,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
